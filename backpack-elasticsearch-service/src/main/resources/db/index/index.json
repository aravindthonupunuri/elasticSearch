{
    "mappings":{
        "properties":{
            "registry_id":{
                "type":"text"
            },
            "registry_title":{
                "type":"text",
                "analyzer":"ngram_analyzer",
                "search_analyzer":"custom_search_analyzer",
                "fields":{
                    "keyword":{
                        "type":"keyword"
                    }
                }
            },
            "registry_type":{
                "type":"text",
                "analyzer":"standard",
                "search_analyzer":"custom_search_analyzer",
                "fields":{
                    "keyword":{
                        "type":"keyword"
                    }
                }
            },
            "registry_status":{
                "type":"text"
            },
            "registry_visibility":{
                "type":"text"
            },
            "registrant_first_name":{
                "type":"text",
                "analyzer":"ngram_analyzer",
                "search_analyzer":"custom_search_analyzer",
                "fields":{
                    "keyword":{
                        "type":"keyword"
                    }
                }
            },
            "registrant_last_name":{
                "type":"text",
                "analyzer":"ngram_analyzer",
                "search_analyzer":"custom_search_analyzer",
                "fields":{
                    "keyword":{
                        "type":"keyword"
                    }
                }
            },
            "coregistrant_first_name":{
                "type":"text",
                "analyzer":"ngram_analyzer",
                "search_analyzer":"custom_search_analyzer",
                "fields":{
                    "keyword":{
                        "type":"keyword"
                    }
                }
            },
            "coregistrant_last_name":{
                "type":"text",
                "analyzer":"ngram_analyzer",
                "search_analyzer":"custom_search_analyzer",
                "fields":{
                    "keyword":{
                        "type":"keyword"
                    }
                }
            },
            "organization_name":{
                "type":"text",
                "analyzer":"ngram_analyzer",
                "search_analyzer":"custom_search_analyzer",
                "fields":{
                    "keyword":{
                        "type":"keyword"
                    }
                }
            },
            "event_city":{
                "type":"text"
            },
            "event_state":{
                "type":"text"
            },
            "event_country":{
                "type":"text"
            },
            "event_date":{
                "type":"text"
            }
        }
    },
    "settings":{
        "analysis":{
            "filter":{
                "word_delimiter_filter":{
                    "type":"word_delimiter"
                },
                "ngram_filter":{
                    "type":"edgeNGram",
                    "min_gram":"1",
                    "max_gram":"120"
                }
            },
            "char_filter":{
                "my_char_filter":{
                    "type":"pattern_replace",
                    "pattern":"\\b( and | or | registry )",
                    "replacement":""
                }
            },
            "analyzer":{
                "custom_search_analyzer":{
                    "filter":[
                        "lowercase",
                        "word_delimiter_filter"
                    ],
                    "char_filter":[
                        "my_char_filter"
                    ],
                    "type":"custom",
                    "tokenizer":"standard"
                },
                "ngram_analyzer":{
                    "filter":[
                        "lowercase",
                        "word_delimiter_filter",
                        "ngram_filter"
                    ],
                    "type":"custom",
                    "tokenizer":"standard"
                }
            }
        }
    }
}
